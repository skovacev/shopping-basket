<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{DEFAULT} %-5p %c{1}[%L] - %m%n%ex{full}"/>
    </Console>
    <File name="File" fileName="logs/shoppingBasket.log">
      <PatternLayout>
        <Pattern>%d{DEFAULT} %-5p %c{1}[%L] - %m%n%ex{full}</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="com.typeqast.job.rest.logger.AppLogger" level="trace" additivity="false">
      <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="Console"/>
<!--       <AppenderRef ref="File"/> -->
    </Root>
  </Loggers>
</Configuration>